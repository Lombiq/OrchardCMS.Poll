@model Urbanit.Polls.Models.PollsPart

@{
    bool isNewRecord = Model.Id == 0;
}
<fieldset>
    <legend>@T("Urbanit Polls Settings")</legend>
    <ol>
        <li>
            @Html.LabelFor(model => model.Name, T("Name"))
            @Html.TextBoxFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
            <span class="hint">@T("The name of the voting.")</span>
        </li>
        <li>
            @Html.LabelFor(model => model.Question, T("Question"))
            @Html.TextBoxFor(model => model.Question)
            @Html.ValidationMessageFor(model => model.Question)
            <span class="hint">@T("Write the question what the poll is about.")</span>
        </li>
        <li>
            @Html.LabelFor(model => model.AnswerList, T("Answers"))
            @Html.TextAreaFor(model => model.AnswerList)
            @Html.ValidationMessageFor(model => model.AnswerList)
            <span class="hint">@T("Write down the answers on seperarate lines. It is important, because all lines will be a different option for the poll. If you change answers for an existing or active poll, the vote counter will be reseted.")</span>
        </li>
        <li>
            @Html.LabelFor(model => model.Comment, T("Comment"))
            @Html.TextAreaFor(model => model.Comment)
            <span class="hint">@T("In this section some comment can be added to the the poll.")</span>
        </li>
        <li>
            @Html.LabelFor(model => model.IsActive, T("Check or uncheck here if you want the poll to be active or inactive:"))
            @Html.CheckBoxFor(model => model.IsActive)
        </li>
    </ol>
    @if (!isNewRecord)
    {
        <table class="items" summary="@T("This is a table of the answers corresponding to the poll you selected.")">
            <thead>
                <tr>
                    <th>@T("Text")</th>
                    <th>@T("Vote count")</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Answers != null)
                {
                    foreach (var answer in Model.Answers)
                    {
                        <tr>
                            <td>
                                @answer.Text
                            </td>
                            <td>
                                @answer.VoteCount
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
</fieldset>